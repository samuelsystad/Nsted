@{
    ViewData["Title"] = "Registrering";
    <link rel="stylesheet" href="~/css/Registreringstyle.css" />
}


<h1>Registrering</h1>
<br />
<div class="container">
    <form method="post" action="/Home/Arbeidsdokument">
        <div class="row mb-3">
            <div class="col-md-6">
                <!-- First Row -->
                <label for="bookingTilUke" class="form-label">Booket Service Til Uke:</label>
                <input type="number" class="form-control" id="bookingTilUke" placeholder="Uke nr" aria-label="Booket Service Til Uke:" max="52" required>
            </div>
            <div class="col-md-6">
                <!-- First Row -->
                <label for="dateInput" class="form-label">Hendvendelse mottatt og registrert:</label>
                    <input type="text" class="form-control" id="dateInput" name="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="dd/mm/yyyy" required>
                </div>
            </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <!-- Second Row -->
                <label for="case" class="form-label">Case ferdig?</label>
                <select class="form-select" id="case" aria-label="Case ferdig?" required>
                      <option disabled selected>Velg et alternativ</option>
                    <option value="1">Ja</option>
                    <option value="2">Nei</option>
                </select>
            </div>
            <div class="col-md-6">
                <!-- Second Row -->
                <label for="produktType" class="form-label" >Produkt type:</label>
                <input type="text" class="form-control" id="produktType" placeholder="Kommentar" aria-label="Produkt type:" required>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-20">
                <!-- Third Row -->
                <label for="feilbeskrivelse" class="form-label">Bestilling / Feilbeskrivelse Fra Kunde:</label>
                <textarea class="form-control" placeholder="Kommentar" id="feilbeskrivelse" aria-label="Bestilling / Feilbeskrivelse Fra Kunde:" required></textarea>
            </div>
            <div class="col-md-20">
                <!-- Third Row -->
                <label for="kundeinfo" class="form-label">Kundeinfo:</label>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <textarea class="form-control" id="navn" placeholder="Navn" aria-label="Navn" required></textarea>
                    <label for="navn">Navn</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <textarea class="form-control" id="adresse" placeholder="Adresse" aria-label="Adressen til kunden" required></textarea>
                    <label for="adresse">Adresse</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="email" class="form-control" id="email" placeholder="navn@eksempel.no" value="navn@eksempel.no" required>
                    <label for="floatingInputGrid">Email addresse</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input type="number" class="form-control" id="telefonNummer" placeholder="Telefon" required>
                    <label for="telefonNummer">Telefon</label>
                </div>
            </div>
        </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Fourth Row -->
                    <label for="levering" class="form-label">Avtalt levering:</label>
                    <input type="text" class="form-control" id="levering" name="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="dd/mm/yyyy" required>
                </div>
                <div class="col-md-6">
                    <!-- Fourth Row -->
                    <label for="mottatt" class="form-label">Produkt mottatt:</label>
                    <input type="text" class="form-control" id="mottatt" name="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="dd/mm/yyyy" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Fifth Row -->
                    <label for="ferdigstillelse" class="form-label">Avtalt ferdigstillelse innen:</label>
                    <input type="text" class="form-control" id="ferdigstillelse" name="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="dd/mm/yyyy" required>
                </div>
                <div class="col-md-6">
                    <!-- Fifth Row -->
                    <label for="serviceferdig" class="form-label">Service ferdig:</label>
                    <input type="text" class="form-control" id="serviceferdig" name="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="dd/mm/yyyy" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Sixth Row -->
                    <label for="utfortservice" class="form-label">Antall timer på utført service:</label>
                    <input type="number" class="form-control" id="utfortservice" placeholder="Antall timer" aria-label="Antall timer på utført service:" required>
                </div>
                <div class="col-md-3">
                    <!-- Sixth Row -->
                    <label for="ordrenr" class="form-label">Ordrenr?</label>
                    <select class="form-select" id="ordrenr" aria-label="Ordrenr?" required>
                        <option disabled selected>Velg et alternativ</option>
                        <option value="1">Ja</option>
                        <option value="2">Nei</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <!-- Sixth Row -->
                    <label for="skjemajanei" class="form-label">Service skjema?</label>
                    <select class="form-select" id="skjemajanei" aria-label="Service skjema?" required>
                        <option disabled selected>Velg et alternativ</option>
                        <option value="1">Ja</option>
                        <option value="2">Nei</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

</form>
</div>