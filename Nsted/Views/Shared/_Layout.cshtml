<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nsted</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Navbarstyle.css" />
    <link rel="stylesheet" href="~/Nsted.styles.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-custom-color navbar-custom-text-color">
            <div class="container-fluid">
                <a class="nav-link custom-button" asp-area="" asp-controller="Home" asp-action="Homepage">Nsted</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" aria-expanded="false">
                            Service
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registrering">Registrering</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NyService">Nytt Serviceskjema</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UnderBehandling">Under Behandling</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FerdigeOrdrer">Ferdige Ordrer</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Lagerbeholdning">Lagerbeholdning</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Arbeidsdokument">Arbeidsdokument</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Logg inn</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
